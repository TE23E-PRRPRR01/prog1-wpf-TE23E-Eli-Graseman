<Window x:Class="melloapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:melloapp"
        mc:Ignorable="d"
        Title="MelloYellow"
        Height="450"
        Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Background="#000">
        <Image Width="200"
               Source="bilder/mello.png" />
        <Label FontWeight="Bold"
               Margin="10"
               Padding="10"
               Foreground="#FFF">Rösta på din favorit låt</Label>
        <Button Name="röd"
                Click="KlickRösta"
                FontWeight="Bold"
                Margin="10"
                Padding="10"
                Background="Red"
                Foreground="#FFF">Röd </Button>
        <Button Name="blå"
                Click="KlickRösta"
                FontWeight="Bold"
                Margin="10"
                Padding="10"
                Background="Blue"
                Foreground="#FFF">Blå </Button>
        <Button Name="grön"
                Click="KlickRösta"
                FontWeight="Bold"
                Margin="10"
                Padding="10"
                Background="Green"
                Foreground="#FFF">Grön </Button>
        <Label Margin="10"
               Foreground="#FFF">Antal röster</Label>
        <TextBox Name="tbxResultat"
                 Margin="10"
                 Padding="10" />
    </StackPanel>
</Window>