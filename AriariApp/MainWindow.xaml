<Window x:Class="AriariApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AriariApp"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="300">
    <StackPanel Margin="10">
        <Label FontSize="30" FontWeight="bold">Aritmetiken</Label>
 <Label FontWeight="bold"
            Margin="10"> Tal 1:</Label>
 <TextBox Name="txbTal1"></TextBox>
 <Label FontWeight="bold">
    Operator(+,-,*,/)</Label>
 <TextBox Name="txbOperator" Margin="5"></TextBox>
  <Label FontWeight="bold"> Tal 2:</Label>
  <TextBox Name="txbTal2"></TextBox>
  <Button
            Click="KlickBeräkna" Height="40" Margin="0,5,0,0">Beräkna</Button>
            <Label Name="lblResultat" FontWeight="bold"></Label>
    </StackPanel>

</Window>